<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <servlet>
        <servlet-name>Starter</servlet-name>
        <servlet-class>se.havochvatten.unionvms.Starter</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Settings</servlet-name>
        <servlet-class>se.havochvatten.unionvms.rest.ChangeServerSettings</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Starter</servlet-name>
        <url-pattern>/starter</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Settings</servlet-name>
        <url-pattern>/configure/*</url-pattern>
    </servlet-mapping>
</web-app>